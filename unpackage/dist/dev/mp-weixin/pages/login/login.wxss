.login {
  position: relative;
  padding: 0px 30px;
  height: 100vh;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.login .login_box .logo_box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.login .login_box .logo_box image {
  width: 244rpx;
  height: 79rpx;
}
.login .login_box .title {
  font-size: 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  margin: 30rpx 0rpx;
}
.login .login_box .form {
  width: 100%;
  background-color: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.login .login_box .form .uni-form-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-bottom: 1px solid #808080;
  padding-left: 20rpx;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
}
.login .login_box .form .uni-form-item text {
  width: 120rpx;
  margin-right: 20rpx;
}
.login .login_box .form .code image {
  padding-right: 20rpx;
  width: 226rpx;
  height: 57rpx;
}
.login .login_box .btn {
  margin: 50rpx 0rpx;
}
.login .login_box .btn .login_btn {
  background-color: #ff7000 !important;
  color: #fff;
  border-radius: 40rpx;
}
.login .login_box .go_register {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  color: #007AFF;
}

